{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "typeRoots" : ["./node_modules/@types",
      "./src/types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@core/di": ["./src/core/di/*"]
    }
  },
  "include": [
    "./src/core/**/*"
  ]
}
